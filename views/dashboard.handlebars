{{> main}}

{{#if posts.length}}
  <h2>My Blog Posts</h2>
  <div class="post-list">
    {{#each posts}}
      <div class="post">
        <h3>{{title}}</h3>
        <p class="post-content">{{content}}</p>
        <p class="post-author">Posted on {{formattedDate}}</p>
        <div class="post-actions">
          <a href="/post/edit/{{id}}" class="btn btn-edit">Edit</a>
          <a href="/post/delete/{{id}}" class="btn btn-delete">Delete</a>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <p>No posts found.</p>
{{/if}}

<a href="/post/create" class="btn">Create New Post</a>
